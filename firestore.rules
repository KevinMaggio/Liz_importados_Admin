rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla general: solo usuarios autenticados pueden leer/escribir
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email_verified == true;
    }
    
    // Reglas específicas para colecciones principales
    match /products/{productId} {
      allow read, write: if request.auth != null && request.auth.token.email_verified == true;
    }
    
    match /combos/{comboId} {
      allow read, write: if request.auth != null && request.auth.token.email_verified == true;
    }
    
    match /config/{configId} {
      allow read, write: if request.auth != null && request.auth.token.email_verified == true;
    }
    
    // Reglas para estadísticas y ventas
    match /stats/{statId} {
      allow read, write: if request.auth != null && request.auth.token.email_verified == true;
    }
    
    match /sales/{saleId} {
      allow read, write: if request.auth != null && request.auth.token.email_verified == true;
    }
  }
} 